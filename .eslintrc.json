{
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "no-debugger'":  "off",
    "indent": ["error", 2],
    "no-console": "warn",
    "no-var": "error",
    "strict": "error",
    "no-case-declarations": "off",
    "no-undef": "off",
    "valid-jsdoc": ["error", {
      "requireReturn": false,
      "prefer": {
        "arg": "param",
        "argument": "param",
        "returns": "return"
      },
      "preferType": {
        "Boolean": "boolean",
        "Number": "number",
        "String": "string",
        "object": "Object"
      }
    }]
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "html"
  ],
  "globals": {
    "customElements": true,
    "HTMLImports": true,
    "Polymer": true,
    "ShadyDOM": true,
    "ShadyCSS": true,
    "JSCompiler_renameProperty": true
  }
}
